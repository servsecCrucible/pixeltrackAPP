# Copy this file to [app]/config/config_env.rb
# This app runs on 9393, see config.ru
# The API runs on 9292 by default, ensure that there are no port conflicts
# Replace [*] with credentials/keys/etc.
# New keys can be generated by 'rake key:generate' task

config_env :development, :test do
  set 'MSG_KEY', "[message encryption key in base64 strict encoding]"
  set 'API_HOST', 'http://localhost:9292/api/v1'
  set 'APP_HOST', 'http://localhost:9393'
end

config_env :production do
  set 'MSG_KEY', "[message encryption key in base64 strict encoding]"
  set 'API_HOST', 'http://[apidomainname]/api/v1'
  set 'APP_HOST', 'http://[appdomainname]'
end

config_env do
  set 'SENDGRID_DOMAIN', 'heroku.com'
  set 'SENDGRID_USERNAME', '...'
  set 'SENDGRID_PASSWORD', '...'
end
